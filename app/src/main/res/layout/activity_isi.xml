<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/biru"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="HALAMAN UTAMA"
        android:textSize="28dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_jadwalsholat"
        android:layout_width="268dp"
        android:layout_height="38dp"
        android:layout_margin="30dp"
        android:layout_gravity="center"
        android:text="JADWAL SHOLAT" />

    <Button
        android:id="@+id/btn_temakajian"
        android:layout_width="268dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:text="TEMA KAJIAN" />

    <Button
        android:id="@+id/btn_doadoa"
        android:layout_width="268dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:text="DOA-DOA" />

</LinearLayout>